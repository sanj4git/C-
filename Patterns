// Butterfly

#include <iostream>
using namespace std;

int main(){

    int n = 4;

    for(int i = 1; i <= n; i++){

        for(int j = 1; j <= i; j ++){
            cout<<"*";
        }

        for(int j = 1; j <= 2*n - 2*i; j ++){
            cout<<" ";
        }
        for(int j = 1; j <= i; j ++){
            cout<<"*";
        }
        cout<<endl;

    }

        for(int i = n; i >= 1; i--){

        for(int j = 1; j <= i; j ++){
            cout<<"*";
        }

        for(int j = 1; j <= 2*n - 2*i; j ++){
            cout<<" ";
        }
        for(int j = 1; j <= i; j ++){
            cout<<"*";
        }
        cout<<endl;

    }

}


// Rhombus

#include <iostream>
using namespace std;

int main(){

    int n = 5;

    for(int i = 1; i <= n; i ++){

        for(int j = 1; j <= n - i; j ++){
            cout<<' ';
        }
        for(int j = 1; j <= n; j ++){
            cout<<"*";
        }

        cout<<endl;
    }


}





// Number Pyramid

#include <iostream>
using namespace std;


int main(){

    int n = 5;

    for(int i = 1; i <= 5; i ++){

        for(int j = 1; j <= n - i; j ++){
            cout<<' ';
        }
        for(int j = 1; j <= i; j ++){
            cout<<j;
            cout<<' ';
        }
        cout<<endl;
    }

}




// Palindromic Pattern

#include <iostream>
using namespace std;


int main(){

    int n = 5;

    for(int i = 1; i <= n; i ++){


        for(int j = 1; j <= n - i; j ++){

            cout<<' ';
        }

        for(int j = i; j >= 1; j --){

            cout<<j;
        }

        for(int j = 2; j <= i; j ++){
            cout<<j;
        }

        cout<<endl;
    }


}



//Star Pattern

#include <iostream>
using namespace std;

int main(){

    int n = 4;

    for(int i = 1; i <= n; i ++){

        for(int j = 1; j <= n - i; j ++){

            cout<<' ';
        }

        for(int j = 1; j <= 2*i - 1; j ++){
            cout<<'*';
        }
        cout<<endl;
    }


        for(int i = n; i >= 1; i --){

        for(int j = 1; j <= n - i; j ++){

            cout<<' ';
        }

        for(int j = 1; j <= 2*i - 1; j ++){
            cout<<'*';
        }
        cout<<endl;
    }

}




// Numberish Pattern


#include <iostream>
using namespace std;

int main(){

    int n = 4;


    for(int i = 1; i <= n; i ++){

        for(int j = 1; j <= i; j ++){
            cout<<j;
        }

        for(int j = 1; j <= 2*n - 2*i; j ++){
            cout<<' ';
        }

        for(int j = 1; j <= i; j ++){
            cout<<j;
        }

        cout<<endl;
    }


}

